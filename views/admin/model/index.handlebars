<div class="container">


    <h3 class="alert alert-dark p-3 text-dark text-center">All model </h3>


    <div class="row">
        <div class="col-6 mx-auto">
            <table class="table table-bordered text-center border-success text-white">
                <thead class="bg-primary">
                    <tr>
                        <th>Title</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="table-hover bg-dark model-list">
                    {{#each model}}
                    <tr>
                        <td> {{title}}</td>
                        <td class="d-flex justify-content-center">
                            <form action="/admin/model/delete/{{title}}?newMethod=DELETE" method="post">
                                <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>

            </table>
        </div>
    </div>

    <hr>

    <div class="row p-4">
        <div class="col-md-8">
            <form action="/admin/model/create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="model-title" name="title" placeholder="Enter Title">
                </div>
                <button class="btn btn-outline-success btn-lg" type="submit">Create
                    model</button>
            </form>

        </div>
    </div>


</div>