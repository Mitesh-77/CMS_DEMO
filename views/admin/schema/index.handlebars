<div class="container">


    <h3 class="alert alert-dark p-3 text-dark text-center">All schema </h3>


    <div class="row">
        <div class="col-6 mx-auto">
            <table class="table table-bordered text-center border-success text-white">
                <thead class="bg-primary">
                    <tr>
                        <th>Title</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="table-hover bg-dark schema-list">
                    {{!-- {{#each }}
                    <tr>
                        <td> {{title}}</td>
                        <td class="d-flex justify-content-center">
                            <form action="/admin/schema/delete/{{title}}?newMethod=DELETE" method="post">
                                <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}} --}}
                </tbody>

            </table>
        </div>
    </div>

    <hr>

    <div class="row p-4">
        <div class="col-md-8">
            <div class="form-group">
                <label for="model">model</label>
                <select name="model" id="model" class="form-control">
                    {{#each model}}
                    <option value="{{title}}">{{title}}</option>
                    {{/each}}
                </select>
                <label for="title">Title</label>
                <input type="text" class="form-control" id="schema-title" name="title" placeholder="Enter Title">
                <label for="type">Type</label>
                <input type="text" class="form-control" id="schema-type" name="type" placeholder="Enter Type">
                <label for="checkbbox">Required : </label>
                <input type="radio" id="yes" name="required" value="true">Yes
                <input type="radio" id="no" name="required" value="false" checked>No
            </div>
            <button class="btn btn-outline-success btn-lg" id="create-schema" type="submit">Create
                Schema</button>

        </div>
    </div>


</div>